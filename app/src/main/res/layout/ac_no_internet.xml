<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ac_no_internet"
    android:id="@+id/ac_no_internet_view"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_no_internet"
            android:layout_centerHorizontal="true"
            android:id="@+id/ac_no_internet_imageview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_no_internet_imageview"
            android:layout_centerHorizontal="true"
            android:text="@string/no_internet_conntion"
            android:textAlignment="center"
            android:layout_margin="25dp"
            android:textColor="#222222"
            android:textSize="16dp"
            android:id="@+id/ac_no_internet_textview"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_no_internet_textview"
            android:layout_centerHorizontal="true"
            android:background="@drawable/style_sign_in_button"
            android:text="@string/try_agin"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="15dp"
            android:onClick="ac_no_internet_on_click_check_conntion"/>

    </RelativeLayout>


</RelativeLayout>