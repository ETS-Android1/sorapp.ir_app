<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ac_limit_of_server"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_limited_from_server"
            android:layout_centerHorizontal="true"
            android:id="@+id/ac_limit_of_server_imageview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_limit_of_server_imageview"
            android:layout_centerHorizontal="true"
            android:text="@string/Your_Account_Is_Limted_Of_Server"
            android:textAlignment="center"
            android:layout_margin="25dp"
            android:textColor="#222222"
            android:textSize="16dp"
            android:id="@+id/ac_limit_of_server_textview"/>

    </RelativeLayout>

</RelativeLayout>