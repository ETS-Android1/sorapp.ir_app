<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ac_notfound_user"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/img_not_found_two"
            android:layout_centerHorizontal="true"
            android:id="@+id/ac_notfound_user_imageview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_notfound_user_imageview"
            android:layout_centerHorizontal="true"
            android:text="@string/user_not_found"
            android:textAlignment="center"
            android:layout_margin="25dp"
            android:textColor="#222222"
            android:textSize="16dp"
            android:id="@+id/ac_notfound_user_textview"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_notfound_user_textview"
            android:layout_centerHorizontal="true"
            android:background="@drawable/style_sign_in_button"
            android:text="@string/try_agin"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="15dp"
            android:onClick="ac_notfound_user_on_click_retry_button"/>

    </RelativeLayout>

</RelativeLayout>