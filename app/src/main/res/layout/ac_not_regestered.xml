<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ac_not_regestered"
    android:background="@android:color/white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/img_denied"
            android:layout_centerHorizontal="true"
            android:id="@+id/ac_not_regestred_imageview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_not_regestred_imageview"
            android:layout_centerHorizontal="true"
            android:text="@string/your_account_is_not_Regestered"
            android:textAlignment="center"
            android:layout_margin="30dp"
            android:textColor="#222222"
            android:textSize="16dp"
            android:id="@+id/ac_not_regestred_textview"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ac_not_regestred_textview"
            android:layout_centerHorizontal="true"
            android:background="@drawable/style_sign_in_button"
            android:text="@string/try_agin"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginTop="15dp"
            android:onClick="ac_not_regestred_on_click_check_Retry"/>

    </RelativeLayout>


</RelativeLayout>